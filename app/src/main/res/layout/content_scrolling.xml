<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@drawable/fondo_blur"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView

            android:id="@+id/TxtGaleria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Galeria"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"

            >

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/cardGaleria"
            android:layout_margin="35dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_gravity="center_horizontal">

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton

                    android:scaleType="centerCrop"
                    android:background="@drawable/galeria"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:onClick="handleSelection"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" >

                </ImageButton>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:id="@+id/TxtCreacionCedazo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="0dp"
            android:text="Creacion del Cedazo"
            android:textColor="@android:color/white"
            android:textSize="18sp"

            >

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/cardCreacion"
            android:layout_margin="35dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_gravity="center_horizontal">

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton

                    android:scaleType="centerCrop"
                    android:background="@drawable/fotoinicio"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:onClick="handleSelection"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" >

                </ImageButton>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView

            android:id="@+id/TxtLugares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="0dp"
            android:text="Lugares TurÃ­sticos"
            android:textColor="@android:color/white"
            android:textSize="18sp"

            >

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/turisticoReciclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView

            android:id="@+id/TxtEventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="0dp"
            android:text="Eventos"
            android:textColor="@android:color/white"
            android:textSize="18sp"

            >

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventoReciclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView

            android:id="@+id/TxtGastronomia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="0dp"
            android:text="Gastronomia"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            >

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/cardGastronomia"
            android:layout_margin="35dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_gravity="center_horizontal">

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton

                    android:scaleType="centerCrop"
                    android:background="@drawable/gastronomia"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:onClick="handleSelection"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" >

                </ImageButton>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>