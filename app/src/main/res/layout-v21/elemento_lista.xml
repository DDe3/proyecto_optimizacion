<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/elementoLista"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgElemento"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/logo_guangopolo" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linearLayout"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:background="@color/azul_barra"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/tituloElemento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:gravity="bottom"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp">
                </TextView>

                <TextView
                    android:id="@+id/descElemento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-22dp"
                    android:gravity="bottom"
                    android:text="@string/lore_ipsum"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp">

                </TextView>


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>